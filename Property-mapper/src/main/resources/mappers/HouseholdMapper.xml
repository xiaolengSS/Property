<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.bdqn.mapper.HouseholdMapper">

    <!-- 业主房屋解绑 -->
    <update id="updateByHouseholdUnbundle">
        update household
        set house_id = null,community_id = null
        where id = #{id}
    </update>

    <!-- 业主房屋绑定 -->
    <update id="updateByHouseholdBinding">
        update household
        <set>
            <if test="houseId != null">
                house_id = #{houseId},
            </if>
            <if test="communityId != null">
                community_id = #{communityId}
            </if>
        </set>
        where id = #{id}
    </update>
</mapper>